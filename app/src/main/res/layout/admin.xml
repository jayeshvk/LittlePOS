<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/button"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="exporttoExcel"
        android:text="Export to Excel" />

    <Button
        android:id="@+id/button4"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonshape"
        android:onClick="copyDBtoSD"
        android:text="Backup Data to SD" />

    <Button
        android:id="@+id/button10"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonshape"
        android:onClick="restoreDBfromSD"
        android:text="Restore from SD" />

    <Button
        android:id="@+id/button5"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonshape"
        android:onClick="attachDBtoEmail"
        android:text="Attach to Email" />

    <!--<Button
        android:id="@+id/button6"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonshape"
        android:onClick="backupToGdrive"
        android:text="Backup to Gdrive" />

    <Button
        android:id="@+id/button7"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="restoreFromGdrive"
        android:text="Restore from Gdrive" />

    <Button
        android:id="@+id/switchAccount"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="changeGdriveAccount"
        android:text="Change Gdrive Account" />-->
    <Button
        android:id="@+id/onlineBackup"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="onlineBackup"
        android:text="Online Backup" />
    <Button
        android:id="@+id/onlineRestore"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="onlineRestore"
        android:text="Online Restore" />
    <Button
        android:id="@+id/selectiveRestore"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="selectiveRestore"
        android:text="Selective Restore" />

    <Button
        android:id="@+id/button8"
        style="@style/mainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbuttonshape"
        android:onClick="resetDB"
        android:text="Clear Data" />

</LinearLayout>
</ScrollView>
