            android:name=".Reports"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CostReportDate"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".costEntry"
